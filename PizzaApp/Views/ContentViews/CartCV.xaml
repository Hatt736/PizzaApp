<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PizzaApp.Views.ContentViews.CartCV"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:PizzaApp.Models"
    xmlns:viewModels="clr-namespace:PizzaApp.ViewModels"
    x:DataType="viewModels:OrderPageViewModel">
    <StackLayout Margin="25">
        <Label
            FontSize="Large"
            HorizontalOptions="Center"
            Text="Your Items!"
            VerticalOptions="Center" />

        <CollectionView Margin="50" ItemsSource="{Binding CartItems}" >
            <CollectionView.ItemsLayout>
                <LinearItemsLayout ItemSpacing="10" Orientation="Vertical" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:PizzaMenuItem">
                    <Grid ColumnDefinitions="4*,*" HorizontalOptions="Center">
                        <Label Grid.Column = "0" HorizontalTextAlignment="Start" Text="{Binding Name}" />
                        <Label Grid.Column = "1" HorizontalTextAlignment="End" Text="{Binding Price}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label Text="{Binding Subtotal, StringFormat='Subtotal: {0:c}'}"
               HorizontalOptions="Center"/>

    </StackLayout>
</ContentView>
