<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PizzaApp.OrderPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:PizzaApp.ViewModels"
    xmlns:models="clr-namespace:PizzaApp.Models"
    Title="Order Page"
    x:DataType ="viewModels:OrderPageViewModel">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cart" Clicked="OnCartClick"/>
    </ContentPage.ToolbarItems>
    <StackLayout Padding="25">

        <Label
            Margin="20"
            FontAttributes="Bold"
            FontSize="Large"
            HorizontalOptions="Center"
            Text="MENU"
            VerticalOptions="Start" />

        <CollectionView
            x:Name="MenuItemCollectionView"
            SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
            SelectionChangedCommandParameter="{Binding SelectedItem, Source={x:Reference MenuItemCollectionView }}"
            Margin="30"
            SelectionChangedCommand="{Binding SelectItemCommand}"
            SelectionMode="Single"
            HorizontalOptions="Fill"
            ItemsSource="{Binding MenuCollection}"
            VerticalOptions="StartAndExpand">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="8" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:PizzaMenuItem" >
                    <HorizontalStackLayout HorizontalOptions="Fill">
                        <Label
                            FontAttributes="Bold"
                            HorizontalTextAlignment="Start"
                            Text="{Binding Name}" />
                        <Label HorizontalTextAlignment="Center" Text="..............." />
                        <Label HorizontalTextAlignment="End" Text="{Binding Price}" />
                    </HorizontalStackLayout>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <CollectionView
            Margin="30"
            HorizontalOptions="FillAndExpand"
            ItemsSource="{Binding Toppings}"
            VerticalOptions="StartAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Topping">
                    <HorizontalStackLayout>
                        <Label Text="{Binding Name}" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Label
            Margin="10"
            HorizontalOptions="Center"
            Text="Create Custom Order!"
            VerticalOptions="End" />
    </StackLayout>
</ContentPage>
